package com.rizsti.classes;

public class Item {

	private int itemId;			//a unique identifier
	private int attack;			//the value it adds to a characters attack
	private int defense;		//the value it adds to a characters defense
	private int quantity;		//the number of this item that the character has
	
	private String name;		//The name of the item
	private String position;	//The position where a person equips the item if applicable
	private String enchantment;	//The enchantment applied to the item
	private String type;		//The type of weapon
	private String iclass;		//The classification of the weapon
	
	private double price;		//The selling price of the item
	private double weight;		//How much the item weighs
	
	/**
	 * @param itemId
	 * @param attack
	 * @param defense
	 * @param name
	 * @param position
	 * @param price
	 * @param weight
	 */
	public Item(int itemId, int attack, int defense, int quantity, String name,
			String position, double price, double weight, String enchantment,
			String type, String iclass) {
		super();
		this.itemId = itemId;
		this.attack = attack;
		this.defense = defense;
		this.quantity = quantity;
		this.name = name;
		this.position = position;
		this.price = price;
		this.weight = weight;
		this.enchantment = enchantment;
		this.type = type;
		this.iclass = iclass;
	}
	/**
	 * @return the itemId
	 */
	public Integer getItemId() {
		return itemId;
	}
	/**
	 * @param itemId the itemId to set
	 */
	public void setItemId(int itemId) {
		this.itemId = itemId;
	}
	/**
	 * @return the attack
	 */
	public int getAttack() {
		return attack;
	}
	/**
	 * @param attack the attack to set
	 */
	public void setAttack(int attack) {
		this.attack = attack;
	}
	/**
	 * @return the defense
	 */
	public int getDefense() {
		return defense;
	}
	/**
	 * @param defense the defense to set
	 */
	public void setDefense(int defense) {
		this.defense = defense;
	}
	/**
	 * @return the quantity
	 */
	public int getQuantity() {
		return quantity;
	}
	/**
	 * @param quantity the quantity to set
	 */
	public void setQuantity(int quantity) {
		this.quantity = quantity;
	}
	/**
	 * @return the name
	 */
	public String getName() {
		return name;
	}
	/**
	 * @param name the name to set
	 */
	public void setName(String name) {
		this.name = name;
	}
	/**
	 * @return the position
	 */
	public String getPosition() {
		return position;
	}
	/**
	 * @param position the position to set
	 */
	public void setPosition(String position) {
		this.position = position;
	}
	/**
	 * @return the price
	 */
	public double getPrice() {
		return price;
	}
	/**
	 * @param price the price to set
	 */
	public void setPrice(double price) {
		this.price = price;
	}
	/**
	 * @return the weight
	 */
	public double getWeight() {
		return weight;
	}
	/**
	 * @param weight the weight to set
	 */
	public void setWeight(double weight) {
		this.weight = weight;
	}
	/**
	 * @return the enchantment
	 */
	public String getEnchantment() {
		return enchantment;
	}
	/**
	 * @param enchantment the enchantment to set
	 */
	public void setEnchantment(String enchantment) {
		this.enchantment = enchantment;
	}
	/**
	 * @return the type
	 */
	public String getType() {
		return type;
	}
	/**
	 * @param type the type to set
	 */
	public void setType(String type) {
		this.type = type;
	}
	/**
	 * @return the iclass
	 */
	public String getIclass() {
		return iclass;
	}
	/**
	 * @param iclass the iclass to set
	 */
	public void setIclass(String iclass) {
		this.iclass = iclass;
	}
	
	
}
