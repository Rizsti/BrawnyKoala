<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#000000">
    <!-- The labels for Name, Attack Bonus, Damage and Crits -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        
        <TextView 
            android:text="@string/aName"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:textSize="@dimen/labelSize"
            android:paddingLeft="4dip"
            android:textColor="#FFF"
            android:textStyle="bold"/>
        
        <TextView
            android:text="@string/aBonus"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/labelSize"
            android:paddingLeft="4dip"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
        <TextView
            android:text="@string/aDamage"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/labelSize"
            android:paddingLeft="4dip"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
        <TextView
            android:text="@string/aCrit"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/labelSize"
            android:paddingLeft="4dip"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
    </LinearLayout>
    <!-- The content views for Name, Attack Bonus, Damage and Criticals -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView android:id="@+id/attkName"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:background="#FFF"
            android:paddingLeft="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginBottom="1dip"/>
        <TextView android:id="@+id/attkBonus"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="#FFF"
            android:paddingLeft="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginBottom="1dip"
            />
        <TextView android:id="@+id/attkDamage"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="#FFF"
            android:paddingLeft="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginBottom="1dip"
            />
        <TextView android:id="@+id/attkCrit"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="#FFF"
            android:paddingLeft="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:layout_marginBottom="1dip"
            />
    </LinearLayout>
    
        <!-- The content views for range, weight, type, size, and special properties -->
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
         <TextView android:id="@+id/attkRange"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="#FFF"
            android:paddingLeft="2dip"
            android:layout_marginLeft="2dip"
            />
        <TextView android:id="@+id/attkWeight"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="#FFF"
            android:paddingLeft="2dip"
            android:layout_marginLeft="2dip"
            />
        <TextView android:id="@+id/attkType"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="#FFF"
            android:paddingLeft="2dip"
            android:layout_marginLeft="2dip"
            />
        <TextView android:id="@+id/attkSize"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="#FFF"
            android:paddingLeft="2dip"
            android:layout_marginLeft="2dip"
            />
        <TextView android:id="@+id/attkSpecial"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:background="#FFF"
            android:paddingLeft="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"/>
        </LinearLayout>
        
        <!-- The labels for range, weight, type, size, special properties -->
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            >
            <TextView
            android:text="@string/aRange"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/labelSize"
            android:paddingLeft="4dip"
            android:textColor="#FFF"
            android:textStyle="bold"/>
        
        <TextView
            android:text="@string/aWeight"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/labelSize"
            android:paddingLeft="4dip"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
        <TextView
            android:text="@string/aType"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/labelSize"
            android:paddingLeft="4dip"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
        <TextView
            android:text="@string/aSize"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/labelSize"
            android:paddingLeft="4dip"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
        <TextView
            android:text="@string/aSpecial"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:textSize="@dimen/labelSize"
            android:paddingLeft="4dip"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
        </LinearLayout>
        
        
</LinearLayout>